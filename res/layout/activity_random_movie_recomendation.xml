<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tacosv3.program02.RandomMovieRecomendation">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Your random recommendation is:"/>

    <fragment
        android:name="com.example.tacosv3.program02.MovieDetailsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_frag"
        android:layout_gravity="center_horizontal"></fragment>

</LinearLayout>
